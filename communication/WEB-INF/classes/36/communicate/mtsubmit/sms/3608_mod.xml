<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="mtsGatewayModule3608" class="com.lxt2.gateway.sms.module.SmsGatewayModule">
		<property name="id" value="3608"/>
		<property name="name" value="下行发送SGIP"/>
		<property name="hub" ref="hubImpl"/>
		<property name="submitQueue" ref="mtsSubmitQueue3608"/>
		<property name="adapter" ref="mtsPersistentSubmitQueueAdapter3608"/>
		<property name="gateway" ref="mtsSgipGateway3608"/>
		<property name="status" value="STOP"/>
		<property name="configList">
			<list>
				<ref bean="moSgipParameter3608"/>
				<ref bean="mtsSgipParameter3608"/>
				<ref bean="mtsSgipDeliverAdapter3608"/>
			</list>
		</property>
		<!-- 命令集合 -->
		<property name="controlCmdMap">
			<map>
				<entry key="qePerf" value-ref="mtsQueueCmd3608"/>
                <entry key="view" value-ref="mtsGateWayViewCmd3608"/>
			</map>
		</property>
		<!-- 指标集合 -->
		<property name="kpiList">
			<list>
				<ref bean="mtsQueueKPI3608"/>
				<ref bean="mtsGateWayModuleKPI3608"/>
			</list>
		</property>
	</bean>

	<!-- 模块的指标配置 -->
	<bean id="mtsQueueKPI3608" class="com.lxt2.queuekc.QueueKPI">
		<property name="queue" ref="mtsSubmitQueue3608"/>
	</bean>
	<!-- 模块的命令配置 -->
	<bean id="mtsQueueCmd3608" class="com.lxt2.queuekc.QueuePerfCmd">
		<property name="kpiQueueList">
			<list>
				<ref bean="mtsQueueKPI3608"/>
			</list>
		</property>
	</bean>

	<bean id="mtsSubmitQueue3608" class="com.lxt2.queuekc.CacheQueue" destroy-method="destroy">
		<property name="cache">
			<bean class="ihandy.lxt20.persist.cache.FCCache"/>
		</property>
		<property name="queueName" value="mtsSubmit3608"/>
	</bean>
	
	<bean id="mtsPersistentSubmitQueueAdapter3608" class="com.lxt2.gateway.sms.queue.PersistentSubmitQueueAdapter">
		<property name="cacheQueue" ref="mtsSubmitQueue3608"/>
		<property name="hub" ref="hubImpl"/>
		<property name="spliterMap" ref="mtsSpliterMap3608"/>
		<property name="config" ref="mtsSgipGatewayConfig3608"/>
	</bean>
	<bean id="mtsPersistentRespQueueAdapter3608" class="com.lxt2.gateway.sms.queue.PersistentRespQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsSgipGatewayConfig3608"/>
		<property name="saveLogger" ref="saveLogger"/>
	</bean>
	<bean id="mtsPersistentReportQueueAdapter3608" class="com.lxt2.gateway.sms.queue.PersistentReportQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="reportAdapter" ref="mtsSgipReportAdapter3608"/>
<!-- 		<property name="proc" value="1004"/> -->
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsSgipGatewayConfig3608"/>
	</bean>
	<bean id="mtsPersistentDeliverQueueAdapter3608" class="com.lxt2.gateway.sms.queue.PerisitentDeliverQueueAdapter">
		<property name="hub" ref="hubImpl" />
		<property name="deliverAdapter" ref="mtsSgipDeliverAdapter3608"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsSgipGatewayConfig3608"/>
	</bean>
    <bean id="mtsGateWayModuleKPI3608" class="com.lxt2.gateway.sms.module.SmsGatewayModuleKPI">
        <property name="cacheQueue" ref="mtsSubmitQueue3608"/>
        <property name="dataGather" ref="mtsDataGather3608"/>
        <property name="module" ref="mtsGatewayModule3608"/>
    </bean>
    <bean id="mtsDataGather3608" class="com.lxt2.gateway.sms.GatewayDataGather" init-method="init" destroy-method="destroy">
    	<property name="path" value="${CLASSPATH}/${nodeID}/persistent/statistics/gateway3608.properties"/>
    </bean>
    <!-- 获取模块的监视信息 -->
	<bean id="mtsGateWayViewCmd3608" class="com.lxt2.base.module.ModuleKPICmd">
		<property name="kpi" ref="mtsGateWayModuleKPI3608"/>
	</bean>
	<!-- 拆分抽象bean -->
	<bean id="mtsAbstractSpliter3608" abstract="true" lazy-init="true">
		<property name="gatewayId" ref="gatewayId3608"></property>
		<property name="gatewayXmlParser" ref="gatewayXml"></property>
		<property name="nodeGatewayID" value="${nodeID}" />
	</bean>
	<bean id="mtsSpliterMap3608" class="java.util.HashMap" scope="prototype">
		<constructor-arg index="0">
			<map>
				<entry key="15">
					<!-- 普通短信拆分类 -->
					<bean class="com.techcenter.spliter.CommSmsSpliter" parent="mtsAbstractSpliter3608" >
						<property name="smSplit">
							<bean class="com.techcenter.spliter.SMSplit" />
						</property>
					</bean>
				</entry>
				<entry key="31">
					<!-- wappush拆分类 -->
					<bean class="com.techcenter.spliter.WapPushSpliter" />
				</entry>
				<entry key="32">
					<!-- 长短信拆分类 -->
					<bean class="com.techcenter.spliter.LongSmsSpliter" parent="mtsAbstractSpliter3608"/>
				</entry>
			</map>
		</constructor-arg>
	</bean>
</beans>
